        {% endif %}
        <div class="card-body">
          <p class="card-text">#{{ seminar.data.n }}</p>
          {% if seminar.fileSlug | length == 1 %}
          <a href="/seminars/{{ seminar_date }}-{{ seminar.fileSlug }}" class="card-anchor">
            {% else %}
